{
  "name": "SWD_iframe",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "scripts": ["bg.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/jquery.js",
        "js/background.js",
        "js/swd.layout.js"
      ],
      "css":[
        "css/style.css",
        "css/font.css"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs"
  ],
  "web_accessible_resources": [
    "js/jquery.js",
    "js/swd.transfer.js",
    "js/swd.images.js",
    "js/swd.cursorLayer.js",
    "js/swd.layout.js",
    "js/main.js",
    "js/audioclick.js",
    "js/jquery.ui.js",
    "js/main.js"


  ]
}